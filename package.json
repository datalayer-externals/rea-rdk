{
  "name": "rdk",
  "version": "6.4.4",
  "description": "React Component Developer Kit",
  "scripts": {
    "build": "vite build --mode library",
    "chromatic": "chromatic --project-token=uktab5dt17b --exit-zero-on-changes",
    "build-storybook": "export NODE_OPTIONS=--openssl-legacy-provider && build-storybook",
    "prettier": "prettier --loglevel warn --write 'src/**/*.{ts,tsx,js,jsx}'",
    "start": "export NODE_OPTIONS=--openssl-legacy-provider && start-storybook -p 9009",
    "storybook:ci": "storybook-to-ghpages --existing-output-dir=storybook-static --ci",
    "test": "vitest --passWithNoTests",
    "test:coverage": "vitest run --coverage --passWithNoTests"
  },
  "type": "module",
  "types": "dist/index.d.ts",
  "main": "./dist/rdk.umd.cjs",
  "module": "./dist/rdk.js",
  "exports": {
    ".": {
      "import": "./dist/rdk.js",
      "require": "./dist/rdk.umd.cjs"
    }
  },
  "source": "src/index.ts",
  "browser": "dist/index.js",
  "style": "dist/index.css",
  "typings": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/reaviz/rdk.git"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "react"
  ],
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/reaviz/rdk/issues"
  },
  "homepage": "https://github.com/reaviz/rdk#readme",
  "dependencies": {
    "body-scroll-lock": "^4.0.0-beta.0",
    "classnames": "^2.3.2",
    "framer-motion": "7.8.0",
    "popper.js": "^1.16.1"
  },
  "peerDependencies": {
    "react": ">=16",
    "react-dom": ">=16"
  },
  "storybook-deployer": {
    "gitUsername": "amcdnl",
    "gitEmail": "amcdaniel2@gmail.com",
    "commitMessage": "deploy storybook [ci skip]"
  },
  "devDependencies": {
    "@mdx-js/react": "1.6.22",
    "@storybook/addon-docs": "6.4.20",
    "@storybook/addons": "6.4.20",
    "@storybook/react": "6.4.20",
    "@storybook/storybook-deployer": "^2.8.11",
    "@types/classnames": "^2.3.1",
    "@types/react": "^17.0.43",
    "@types/react-dom": "^17.0.14",
    "@vitejs/plugin-react": "^4.0.0",
    "@vitest/coverage-c8": "^0.31.1",
    "autoprefixer": "^9.8.5",
    "chromatic": "^6.17.3",
    "husky": "^4.3.0",
    "jsdom": "^22.1.0",
    "lint-staged": "^10.5.4",
    "postcss-focus-visible": "^5.0.0",
    "prettier": "^2.1.2",
    "react": "^18.2.0",
    "react-docgen-typescript-loader": "^3.7.2",
    "react-dom": "^18.2.0",
    "rollup-plugin-peer-deps-external": "^2.2.3",
    "storybook-css-modules-preset": "^1.1.1",
    "typescript": "^4.9.5",
    "vite": "^4.3.9",
    "vite-plugin-checker": "^0.6.0",
    "vite-plugin-css-injected-by-js": "^3.1.1",
    "vite-plugin-dts": "^2.3.0",
    "vite-plugin-svgr": "^3.2.0",
    "vite-tsconfig-paths": "^4.2.0",
    "vitest": "^0.31.1"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "none",
    "arrowParens": "avoid",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "printWidth": 80
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
